<h1>Listing Items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Brand</th>
    <th>Category</th>
    <th>Price</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product_path(product) %></td>
      <td><%= product.brand %></td>
      <td><%= product.category %></td>
      <td><%= product.price %></td>
    </tr>
  <% end %>
</table>